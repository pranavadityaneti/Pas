{
  "expo": {
    "name": "PAS Merchant",
    "slug": "pas-merchant-app",
    "version": "1.0.0",
    "scheme": "pasmerchant",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "updates": {
      "url": "https://u.expo.dev/795d700d-a871-4f9e-a6d2-df905ae9f4ff"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "795d700d-a871-4f9e-a6d2-df905ae9f4ff"
      }
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F6C344"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pas.merchant",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Your location is used to set your shop address, allowing customers to find your store correctly on the map.",
        "NSCameraUsageDescription": "Camera access is required to capture and upload KYC documents for account verification.",
        "NSPhotoLibraryUsageDescription": "Photo library access is needed to select and upload stored KYC documents for merchant verification.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.pas.merchant",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F6C344"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location",
      "expo-image-picker",
      "expo-secure-store"
    ],
    "owner": "pranavadityaneti"
  }
}